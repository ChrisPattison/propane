Bootstrap: docker
From: fedora:25

%setup
cp -rf . $SINGULARITY_ROOTFS/src

%runscript
gdb --args propane_svmc "$@"

%files

%environment

%labels

%post

dnf install -y mpich mpich-devel boost-static boost-devel cmake eigen3-devel-3.2.10 git gcc-c++ gdb gtest-devel

cd /src
rm -rf build
mkdir build
cd build
MPI_HOME=/usr/lib64/mpich cmake .. -DCMAKE_BUILD_TYPE=FastDebug
make
make install
