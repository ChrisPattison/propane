Bootstrap: docker
From: fedora:28

%setup
cp -rf . $SINGULARITY_ROOTFS/src

%runscript
gdb --args psqa_solve "$@"

%files

%environment

%labels

%post

dnf install -y mpich mpich-devel boost-static boost-devel cmake git gcc-c++ gdb gtest-devel wget bzip2 make

cd /src
rm -rf build
mkdir build
cd build

cmake .. -DCMAKE_BUILD_TYPE=FastDebug
make
make install
